---
import Layout from '../layouts/Layout.astro';
import Profile from '../components/Profile.astro';
import LinkCard from '../components/LinkCard.astro';
import Background3D from '../components/Background3D.astro';

const links = [
  {
    title: 'Instagram',
    url: 'https://www.instagram.com/kayaind',
    icon: 'Instagram'
  },
  {
    title: 'WhatsApp',
    url: 'https://wa.me/1234567890',
    icon: 'WhatsApp'
  },
  {
    title: 'Facebook',
    url: 'https://www.facebook.com/kayaind',
    icon: 'Facebook'
  },
  {
    title: 'Página Web',
    url: 'https://www.kayaind.com',
    icon: 'Web'
  }
];
---

<Layout title="KayaInd">
  <Background3D />
  
  <main class="min-h-screen w-full bg-gradient-to-br from-white/50 to-transparent dark:from-black/50 dark:to-transparent backdrop-blur-sm transition-colors duration-300">
    <div class="container mx-auto px-4 py-8 max-w-2xl relative">
      <Profile />
      
      <div class="mt-8 space-y-4">
        <LinkCard
          title="Instagram"
          url="https://www.instagram.com/indumentaria.kaya/"
          icon="Instagram"
        />
        <LinkCard
          title="WhatsApp"
          url="https://wa.me/+5491136962811"
          icon="WhatsApp"
        />
        <LinkCard
          title="Facebook"
          url="https://www.facebook.com/profile.php?id=61559965091694"
          icon="Facebook"
        />
        <LinkCard
          title="Página Web (próximamente)"
          url="https://www.kayaind.com"
          icon="Web"
        />
      </div>
    </div>
  </main>
</Layout>
